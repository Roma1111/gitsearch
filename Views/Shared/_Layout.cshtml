<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Github Search</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        
            
                
                    <br />
                    <br />
                    <br />
                   
                        @using (Html.BeginForm("gitSearch", "Home"))
                        {
                            <input type="text" name="searchWord" class="form-control"  placeholder="Search" style="padding-right:50px; padding-bottom:10px ">
                            <br />
                            <span><input class ="btn btn-primary" type="submit" class="submit"></span>
                        }
                   
            
        
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content">
        <div id="represults"></div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Repository Search</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>
